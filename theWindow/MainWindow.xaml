        <TextBox x:Name="txtPlugboard" HorizontalAlignment="Left" Margin="158,559,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="217" TextChanged="txtPlugboard_TextChanged" Height="28"/>
