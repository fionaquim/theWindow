        <Label Content="M" HorizontalAlignment="Left" Margin="76,119,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Label Content="S" HorizontalAlignment="Left" Margin="148,119,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

